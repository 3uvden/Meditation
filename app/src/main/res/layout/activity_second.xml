<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgrond2"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="247dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_list2"
        android:gravity="center"
        android:text="Выбереите метод"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="542dp"
        android:background="@drawable/shape_list"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/button1"
            android:layout_width="320dp"
            android:layout_height="105dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_list2"
            android:text="Дыхание «один-четыре-два»"
            android:textColor="#C0FCD8" />

        <Button
            android:id="@+id/candlesButton"
            android:layout_width="320dp"
            android:layout_height="105dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_list2"
            android:text="Медитация со свечами"
            android:textColor="#C0FCD8" />

        <Button
            android:id="@+id/bodyButton"
            android:layout_width="320dp"
            android:layout_height="105dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_list2"
            android:text="Медитация «осознание тела»"
            android:textColor="#C0FCD8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>